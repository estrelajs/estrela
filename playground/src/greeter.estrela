<script tag="app-greeter">
  import { prop } from "estrela";
  import { async, when } from "estrela/directives";

  const name = prop<string>();

  const greet: any = new Promise(r => {
    setTimeout(() => r('Welcome'), 5000);
  });
</script>

<h1>
  { async(greet) ?? 'Hello' }
  { when(name() === 'Eduardo', 'o cara', name()) }!
</h1>
