<script tag="app-greeter">
  import { prop } from "estrela";
  import { async, show } from "estrela/directives";

  const name = prop<string>();

  const greet = new Promise<string>(r => {
    setTimeout(() => r('Welcome'), 5000);
  });
</script>

<h1>
  { async(greet) ?? 'Hello' }
  { show(name() === 'Eduardo', 'o cara', name()) }!
</h1>
