{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "estrela": [
        "../estrela/src/core/index.ts"
      ],
      "estrela/dom": [
        "../estrela/src/dom/index.ts"
      ],
      "estrela/router": [
        "../estrela/src/router/index.ts"
      ],
    }
  },
  "include": [
    "src"
  ]
}