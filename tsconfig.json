{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "undefined",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/lib/tests"
  ]
}