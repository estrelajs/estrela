{
  "name": "estrela",
  "version": "0.6.0",
  "description": "Yet another js framework inspired by Lit.",
  "author": "Eduardo Rosostolato",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/estrelajs/estrela"
  },
  "bugs": {
    "url": "https://github.com/estrelajs/estrela/issues"
  },
  "main": "./dist/csj/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/csj/index.js",
      "require": "./dist/csj/index.js",
      "default": "./dist/esm/index.js"
    },
    "./directives": {
      "types": "./dist/types/directives/index.d.ts",
      "node": "./dist/csj/directives.js",
      "require": "./dist/csj/directives.js",
      "default": "./dist/esm/directives.js"
    }
  },
  "scripts": {
    "dev": "cd playground && vite",
    "build": "npm-run-all build:clean build:package",
    "build:clean": "node ./tools/clean.js",
    "build:package": "node ./tools/rollup-bundle.js && node ./tools/generate-alias.js",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn build:clean"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/html-escaper": "^3.0.0",
    "esbuild": "^0.14.25",
    "fs-extra": "^10.0.1",
    "html-escaper": "^3.0.3",
    "morphdom": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.68.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rxjs": "^7.5.5",
    "typescript": "^4.5.4",
    "vite": "^2.8.6",
    "vite-plugin-estrela": "1.1.2"
  },
  "peerDependencies": {
    "rxjs": "^7.5.5"
  }
}
