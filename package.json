{
  "name": "estrela",
  "version": "0.3.3",
  "description": "Yet another js framework inspired by Lit.",
  "author": "Eduardo Rosostolato",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/estrelajs/estrela"
  },
  "bugs": {
    "url": "https://github.com/estrelajs/estrela/issues"
  },
  "main": "./dist/csj/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/csj/index.js",
      "default": "./dist/esm/index.js",
      "ES2015": "./dist/es2015/index.js"
    },
    "./directives": {
      "node": "./dist/csj/directives.js",
      "default": "./dist/esm/directives.js",
      "ES2015": "./dist/es2015/directives.js"
    }
  },
  "scripts": {
    "dev": "cd examples && vite",
    "build": "rimraf -rf dist && rollup -c rollup.config.js",
    "publish": "npm publish",
    "release": "yarn build && npm publish",
    "example:build": "cd examples && vite build",
    "example:preview": "cd examples && vite preview"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "esbuild": "^0.14.25",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-command": "^1.1.3",
    "rollup-plugin-esbuild": "^4.8.2",
    "rxjs": "^7.5.4",
    "typescript": "^4.5.4",
    "vite": "^2.8.6"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  }
}
