{
  "name": "estrela",
  "version": "0.4.3",
  "description": "Yet another js framework inspired by Lit.",
  "author": "Eduardo Rosostolato",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/estrelajs/estrela"
  },
  "bugs": {
    "url": "https://github.com/estrelajs/estrela/issues"
  },
  "main": "./csj/index.js",
  "module": "./esm/index.js",
  "ES2015": "./es2015/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "node": "./csj/index.js",
      "default": "./esm/index.js",
      "ES2015": "./es2015/index.js"
    },
    "./directives": {
      "node": "./csj/directives.js",
      "default": "./esm/directives.js",
      "ES2015": "./es2015/directives.js"
    }
  },
  "scripts": {
    "dev": "cd playground && vite",
    "build": "rimraf -rf dist && rollup -c rollup.config.js",
    "release": "yarn build && cd dist && yarn publish"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "esbuild": "^0.14.25",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-command": "^1.1.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rxjs": "^7.5.4",
    "typescript": "^4.5.4",
    "vite": "^2.8.6",
    "vite-plugin-estrela": "1.1.1"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  }
}
